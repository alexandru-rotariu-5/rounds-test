<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/app_margin"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout style="@style/AppTheme.Summary.Section">

        <TextView
            style="@style/AppTheme.Summary.Section.Title"
            android:fontFamily="@font/digital_7_regular"
            android:text="@string/summary_section_title_times" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtv_session_start"
                style="@style/AppTheme.Summary.Section.Data"
                android:fontFamily="@font/digital_7_regular"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/txtv_session_time_separator" />

            <TextView
                android:id="@+id/txtv_session_time_separator"
                style="@style/AppTheme.Summary.Section.Data"
                android:fontFamily="@font/digital_7_regular"
                android:layout_centerInParent="true"
                android:text="@string/time_separator" />

            <TextView
                android:id="@+id/txtv_session_end"
                style="@style/AppTheme.Summary.Section.Data"
                android:fontFamily="@font/digital_7_regular"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/txtv_session_time_separator" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout style="@style/AppTheme.Summary.Section">
        <TextView
            style="@style/AppTheme.Summary.Section.Title"
            android:fontFamily="@font/digital_7_regular"
            android:text="@string/summary_section_title_duration" />

        <TextView
            android:id="@+id/txtv_session_duration"
            style="@style/AppTheme.Summary.Section.Data"
            android:fontFamily="@font/digital_7_regular" />
    </LinearLayout>

    <LinearLayout style="@style/AppTheme.Summary.Section">
        <TextView
            style="@style/AppTheme.Summary.Section.Title"
            android:fontFamily="@font/digital_7_regular"
            android:text="@string/summary_section_title_distance" />

        <TextView
            android:id="@+id/txtv_session_distance"
            style="@style/AppTheme.Summary.Section.Data"
            android:fontFamily="@font/digital_7_regular" />
    </LinearLayout>

    <LinearLayout style="@style/AppTheme.Summary.Section">
        <TextView
            style="@style/AppTheme.Summary.Section.Title"
            android:fontFamily="@font/digital_7_regular"
            android:text="@string/summary_section_title_speed" />

        <TextView
            android:id="@+id/txtv_session_speed"
            style="@style/AppTheme.Summary.Section.Data"
            android:fontFamily="@font/digital_7_regular"/>
    </LinearLayout>

    <LinearLayout style="@style/AppTheme.Summary.Section">
        <TextView
            style="@style/AppTheme.Summary.Section.Title"
            android:fontFamily="@font/digital_7_regular"
            android:text="@string/summary_section_title_start_location" />

        <TextView
            android:id="@+id/txtv_start_location"
            style="@style/AppTheme.Summary.Section.Data"
            android:fontFamily="@font/digital_7_regular"/>
    </LinearLayout>

    <LinearLayout style="@style/AppTheme.Summary.Section">
        <TextView
            style="@style/AppTheme.Summary.Section.Title"
            android:fontFamily="@font/digital_7_regular"
            android:text="@string/summary_section_title_end_location" />

        <TextView
            android:id="@+id/txtv_end_location"
            style="@style/AppTheme.Summary.Section.Data"
            android:fontFamily="@font/digital_7_regular"/>
    </LinearLayout>

</LinearLayout>